name: Deploy Documentation

on:
  push:
    branches:
      - main
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

{% if tool_choices.docs_tool == 'sphinx' -%}
      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
{% if tool_choices.package_manager == 'pip' -%}
          pip install -r requirements.txt
{%- elif tool_choices.package_manager == 'uv' -%}
          pip install uv
          uv pip install --system -r requirements.txt
{%- elif tool_choices.package_manager == 'poetry' -%}
          pip install poetry
          poetry install
{%- endif %}

      - name: Build documentation
        run: |
          cd docs
{% if tool_choices.package_manager == 'poetry' -%}
          poetry run sphinx-build -b html source build/html
{%- else -%}
          sphinx-build -b html source build/html
{%- endif %}

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: docs/build/html

{%- elif tool_choices.docs_tool == 'mkdocs' -%}
      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
{% if tool_choices.package_manager == 'pip' -%}
          pip install -r requirements.txt
{%- elif tool_choices.package_manager == 'uv' -%}
          pip install uv
          uv pip install --system -r requirements.txt
{%- elif tool_choices.package_manager == 'poetry' -%}
          pip install poetry
          poetry install
{%- endif %}

      - name: Build documentation
        run: |
{% if tool_choices.package_manager == 'poetry' -%}
          poetry run mkdocs build
{%- else -%}
          mkdocs build
{%- endif %}

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: site

{%- elif tool_choices.docs_tool == 'docusaurus' -%}
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build documentation
        run: npm run build

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: build
{%- endif %}

  deploy:
    environment:
      name: github-pages
      url: {% raw %}${{ steps.deployment.outputs.page_url }}{% endraw %}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
