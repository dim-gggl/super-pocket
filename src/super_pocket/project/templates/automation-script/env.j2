# Environment configuration for {{ project_display_name }}

{% if tool_choices.scheduler != "none" %}
# Schedule (cron format: minute hour day month day_of_week)
SCHEDULE="0 * * * *"
{% endif %}

{% if features.logging %}
# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/{{ project_name }}.log
{% endif %}

{% if features.notifications %}
# Email notifications
EMAIL_TO=
EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Slack notifications
SLACK_WEBHOOK=
{% endif %}
